datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
  engineType = "wasm"
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model User {
  id              Int           @id @default(autoincrement())
  name            String
  email           String        @unique
  password        String
  role            Role          @relation(fields: [roleId], references: [id])
  roleId          Int
  collegeId       Int?
  collegeName     String?
  companyName     String?
  createdAt       DateTime      @default(now())
  emailVerified   Boolean       @default(false)
  emailVerificationToken String?      @unique
  passwordResetToken     String?      @unique
  passwordResetExpires   DateTime?
  postedInternships Internship[]  @relation("PostedBy")
  applications    Application[] @relation("StudentApplications")
  logbooks        Logbook[]     @relation("StudentLogbooks")
  credits         Credit[]      @relation("StudentCredits")
  issuedCredits   Credit[]      @relation("IssuedBy")
  refreshTokens   RefreshToken[]
}

model Internship {
  id            Int           @id @default(autoincrement())
  title         String
  description   String
  postedBy      User          @relation("PostedBy", fields: [postedById], references: [id])
  postedById    Int
  createdAt     DateTime      @default(now())
  applications  Application[]
  logbooks      Logbook[]
  credits       Credit[]
}

model Application {
  id           Int        @id @default(autoincrement())
  internship   Internship @relation(fields: [internshipId], references: [id])
  internshipId Int
  student      User       @relation("StudentApplications", fields: [studentId], references: [id])
  studentId    Int
  status       String
  createdAt    DateTime   @default(now())
}

model Logbook {
  id           Int        @id @default(autoincrement())
  student      User       @relation("StudentLogbooks", fields: [studentId], references: [id])
  studentId    Int
  internship   Internship? @relation(fields: [internshipId], references: [id])
  internshipId Int?
  entry        String
  date         DateTime   @default(now())
}

model Credit {
  id           Int        @id @default(autoincrement())
  student      User       @relation("StudentCredits", fields: [studentId], references: [id])
  studentId    Int
  internship   Internship? @relation(fields: [internshipId], references: [id])
  internshipId Int?
  units        Int
  issuedBy     User       @relation("IssuedBy", fields: [issuedById], references: [id])
  issuedById   Int
  issuedAt     DateTime   @default(now())
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  tokenHash String   @unique
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
}
