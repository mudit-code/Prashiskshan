datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
  engineType = "wasm"
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model User {
  id              Int           @id @default(autoincrement())
  name            String
  email           String        @unique
  password        String
  role            Role          @relation(fields: [roleId], references: [id])
  roleId          Int
  collegeId       Int?
  collegeName     String?
  companyName     String?
  aisheCode       String?       @unique
  collegeWebsite  String?
  createdAt       DateTime      @default(now())
  emailVerified   Boolean       @default(false)
  emailVerificationToken String?      @unique
  passwordResetToken     String?      @unique
  passwordResetExpires   DateTime?
  failedLoginAttempts    Int           @default(0)
  lockoutUntil           DateTime?
  postedInternships Internship[]  @relation("PostedBy")
  applications    Application[] @relation("StudentApplications")
  logbooks        Logbook[]     @relation("StudentLogbooks")
  credits         Credit[]      @relation("StudentCredits")
  issuedCredits   Credit[]      @relation("IssuedBy")
  refreshTokens   RefreshToken[]
  studentProfile  StudentProfile?
  companyProfile  CompanyProfile?
  collegeProfile  CollegeProfile?
}

model CollegeProfile {
  id                Int      @id @default(autoincrement())
  user              User     @relation(fields: [userId], references: [id])
  userId            Int      @unique
  
  // Personal Details
  firstName         String
  middleName        String?
  lastName          String
  designation       String
  department        String
  officialEmail     String
  mobileNumber      String
  alternateMobileNumber String?
  gender            String
  
  // College Details
  collegeName       String
  collegeCode       String
  university        String
  collegeType       String
  websiteUrl        String?
  collegeEmail      String?
  yearOfEstablishment String?
  
  // Address Details
  campusAddress     String
  city              String
  district          String
  state             String
  pinCode           String
  
  // Verification
  idProofUrl        String?
  authLetterUrl     String?
  
  isCompleted       Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model CompanyProfile {
  id                Int      @id @default(autoincrement())
  user              User     @relation(fields: [userId], references: [id])
  userId            Int      @unique
  
  // Company Details
  companyName       String
  legalName         String?
  cinRegistration   String?
  companyType       String?
  industrySector    String?
  yearOfIncorporation String?
  companySize       String?
  
  // Contact Details
  officialEmail     String
  contactNumber     String?
  alternatePhone    String?
  websiteUrl        String?
  linkedinUrl       String?
  
  // Address
  headOfficeAddress String?
  city              String?
  district          String?
  state             String?
  pinCode           String?
  country           String?
  
  // HR Details
  recruiterFirstName String?
  recruiterLastName  String?
  designation       String?
  workEmail         String?
  workContactNumber String?
  
  // Compliance
  registrationProofUrl String?
  authLetterUrl     String?
  companyLogoUrl    String?
  
  // Hiring Preferences
  internshipTypes   String? // Comma separated
  stipendOffered    String?
  preferredSkills   String? // Comma separated
  hiringVolume      String?
  
  isCompleted       Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model StudentProfile {
  id              Int       @id @default(autoincrement())
  user            User      @relation(fields: [userId], references: [id])
  userId          Int       @unique
  firstName       String
  middleName      String?
  lastName        String
  fatherFirstName String?
  fatherMiddleName String?
  fatherLastName  String?
  motherFirstName String?
  motherMiddleName String?
  motherLastName  String?
  mobileNumber    String?
  gender          String?
  dob             DateTime?
  address         Address?
  education       Education[]
  certifications  Certification[]
  workExperience  WorkExperience[]
  socialLinks     SocialLinks?
  photoUrl        String?
  signatureUrl    String?
  
  // College Verification Details
  rollNo          String?
  course          String?
  branch          String?
  year            String?
  section         String?
  collegeEmail    String?
  collegeIdCardUrl String?

  isCompleted     Boolean   @default(false)
  approvalStatus  String    @default("Pending") // "Pending", "Approved", "Rejected"
}

model Address {
  id              Int            @id @default(autoincrement())
  studentProfile  StudentProfile @relation(fields: [profileId], references: [id])
  profileId       Int            @unique
  houseNo         String
  locality        String
  city            String
  district        String
  state           String
  pinCode         String
}

model Education {
  id              Int            @id @default(autoincrement())
  studentProfile  StudentProfile @relation(fields: [profileId], references: [id])
  profileId       Int
  level           String         // "10th", "12th", "Graduation", "Post-Graduation"
  rollNumber      String?
  yearOfPassing   String
  boardName       String?
  schoolName      String?
  collegeName     String?
  universityName  String?
  course          String?
  branch          String?
  yearOfAdmission String?
  cgpaOrPercentage String?
  marksObtained   Float?
  maximumMarks    Float?
  marksheetUrl    String?
}

model Certification {
  id              Int            @id @default(autoincrement())
  studentProfile  StudentProfile @relation(fields: [profileId], references: [id])
  profileId       Int
  title           String
  issuedBy        String
  issuedOn        DateTime
  description     String?
  certificateUrl  String?
}

model WorkExperience {
  id              Int            @id @default(autoincrement())
  studentProfile  StudentProfile @relation(fields: [profileId], references: [id])
  profileId       Int
  role            String
  company         String
  startDate       DateTime
  endDate         DateTime?
  isCurrent       Boolean        @default(false)
  description     String?
  experienceLetterUrl String?
}

model SocialLinks {
  id              Int            @id @default(autoincrement())
  studentProfile  StudentProfile @relation(fields: [profileId], references: [id])
  profileId       Int            @unique
  linkedin        String?
  github          String?
  portfolio       String?
  other           String?
}

model Internship {
  id            Int           @id @default(autoincrement())
  title         String
  description   String
  postedBy      User          @relation("PostedBy", fields: [postedById], references: [id])
  postedById    Int
  createdAt     DateTime      @default(now())
  applications  Application[]
  logbooks      Logbook[]
  credits       Credit[]
  isCreditBased Boolean       @default(false)

  // New Fields
  workMode            String    // "On-site", "Hybrid", "Remote"
  location            String?   // City (if not Remote)
  internshipType      String    // "Full-time", "Part-time"
  duration            String    // e.g. "3 months"
  stipendType         String    // "Paid", "Unpaid", "Performance-based"
  stipendAmount       String?
  skills              String    // Comma separated
  openings            Int
  startDate           DateTime
  applicationDeadline DateTime
  status              String    @default("Open") // "Open", "Closed"
  perks               String?
  eligibility         String?   // Course/Branch requirements
  requirements        String?   // Additional requirements
}

model Application {
  id           Int        @id @default(autoincrement())
  internship   Internship @relation(fields: [internshipId], references: [id])
  internshipId Int
  student      User       @relation("StudentApplications", fields: [studentId], references: [id])
  studentId    Int
  status       String     // "Pending", "Accepted", "Rejected"
  createdAt    DateTime   @default(now())
  
  // New Fields
  resumeUrl      String?
  coverLetter    String?
  offerLetterUrl String?
  nocStatus      String?    // "Requested", "Approved", "Rejected"

  @@unique([internshipId, studentId])
}

model Logbook {
  id           Int        @id @default(autoincrement())
  student      User       @relation("StudentLogbooks", fields: [studentId], references: [id])
  studentId    Int
  internship   Internship? @relation(fields: [internshipId], references: [id])
  internshipId Int?
  entry        String
  date         DateTime   @default(now())
}

model Credit {
  id           Int        @id @default(autoincrement())
  student      User       @relation("StudentCredits", fields: [studentId], references: [id])
  studentId    Int
  internship   Internship? @relation(fields: [internshipId], references: [id])
  internshipId Int?
  units        Int
  issuedBy     User       @relation("IssuedBy", fields: [issuedById], references: [id])
  issuedById   Int
  issuedAt     DateTime   @default(now())
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  tokenHash String   @unique
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
}
